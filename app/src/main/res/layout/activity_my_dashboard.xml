<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_blue_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_back_24"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Badge -->
        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Dashboard"
            android:textStyle="bold"
            android:textColor="@color/brandBlueDark"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_card"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- White card: Service Summary + Meetings + Docs -->
        <LinearLayout
            android:id="@+id/sectionSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:elevation="6dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Service Summary -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Summary"
                android:textStyle="bold"
                android:textColor="@color/brandBlueDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTotalCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:text="Estimated Total Cost: R0.00"
                android:textStyle="bold"
                android:textColor="@color/textDark"
                android:background="#F3F4F6"/>

            <View android:layout_width="match_parent" android:layout_height="12dp"/>

            <!-- Scheduled Meetings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scheduled Meetings"
                android:textStyle="bold"
                android:textColor="@color/brandBlueDark"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btnScheduleMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule New Meeting"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />

            <View android:layout_width="match_parent" android:layout_height="12dp"/>

            <!-- Service Documents -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Documents"
                android:textStyle="bold"
                android:textColor="@color/brandBlueDark"
                android:textSize="14sp"/>

            <!-- Doc rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <!-- 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“„  Service Agreement"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:textStyle="bold"
                        android:textColor="@color/brandBlueLight"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                <!-- 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ§¾  Initial Assessment Report"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Pending)"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E5E7EB"/>

                <!-- 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“‘  Proposal Document"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Pending)"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Service Timeline (separate card below; scroll reveals rest) -->
        <LinearLayout
            android:id="@+id/sectionTimeline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:elevation="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/sectionSummary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Timeline"
                android:textStyle="bold"
                android:textColor="@color/brandBlueDark"
                android:textSize="14sp" />

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dot_step_blue"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initial Consultation"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheduled: Loadingâ€¦"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We'll discuss your requirements in detail"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dot_step_grey"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assessment"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated: Loadingâ€¦"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprehensive evaluation of your systems"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dot_step_grey"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solution Proposal"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated: Loadingâ€¦"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detailed plan with recommendations"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Step 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dot_step_grey"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Implementation"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated: Loadingâ€¦"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deployment of agreed solutions"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Step 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="5"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dot_step_grey"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongoing Support"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated: Loadingâ€¦"
                        android:textColor="#6B7280"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continuous maintenance and improvements"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
