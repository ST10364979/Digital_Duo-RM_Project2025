<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back arrow -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:src="@drawable/ic_back_24"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@android:color/white" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Blue banner -->
        <LinearLayout
            android:id="@+id/headerBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_banner_blue"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Our Services"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill out the form to get started with our IT solutions"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Badge -->
        <TextView
            android:id="@+id/tvFormBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Request Form"
            android:textStyle="bold"
            android:textColor="@color/brandBlueDark"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_card"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/headerBlock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- White card containing the form -->
        <LinearLayout
            android:id="@+id/contentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvFormBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name*"
                android:textColor="@color/textDark"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/hintGrey"
                android:backgroundTint="@color/brandBlueLight" />

            <View android:layout_width="match_parent" android:layout_height="10dp"/>

            <!-- Company -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/textDark"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etCompany"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Company Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/hintGrey"
                android:backgroundTint="@color/brandBlueLight" />

            <View android:layout_width="match_parent" android:layout_height="10dp"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email*"
                android:textColor="@color/textDark"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hintGrey"
                android:backgroundTint="@color/brandBlueLight" />

            <View android:layout_width="match_parent" android:layout_height="10dp"/>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/textDark"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColorHint="@color/hintGrey"
                android:backgroundTint="@color/brandBlueLight" />

            <View android:layout_width="match_parent" android:layout_height="14dp"/>

            <!-- Services Needed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services Needed*"
                android:textColor="@color/textDark"
                android:textSize="12sp" />

            <CheckBox android:id="@+id/cbConsult" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Client Consultation"/>
            <CheckBox android:id="@+id/cbAssessment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="IT Assessment"/>
            <CheckBox android:id="@+id/cbProposal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Solution Proposal"/>
            <CheckBox android:id="@+id/cbImplementation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Implementation"/>
            <CheckBox android:id="@+id/cbSupport" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ongoing Support"/>

            <View android:layout_width="match_parent" android:layout_height="14dp"/>

            <!-- Additional Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Information"
                android:textColor="@color/textDark"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/etAdditional"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top|start"
                android:hint="Tell us more about your needsâ€¦"
                android:inputType="textMultiLine"
                android:textColorHint="@color/hintGrey"
                android:backgroundTint="@color/brandBlueLight" />

            <View android:layout_width="match_parent" android:layout_height="14dp"/>

            <!-- Urgency -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgency Level"
                android:textColor="@color/textDark"
                android:textSize="12sp" />
            <Spinner
                android:id="@+id/spUrgency"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBarRequest"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="18dp"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Submit Request"
                android:textAllCaps="false"
                android:textColor="@color/textLight"
                android:background="@drawable/btn_primary"
                android:layout_marginTop="18dp"/>
        </LinearLayout>

        <!-- Extend blue to bottom -->
        <View
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_blue_gradient"
            app:layout_constraintTop_toBottomOf="@id/contentCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
