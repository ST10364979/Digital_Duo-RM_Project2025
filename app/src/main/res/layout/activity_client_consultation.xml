<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back arrow -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:padding="6dp"
            android:src="@drawable/ic_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="12dp"
            app:tint="@android:color/white" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Blue banner block -->
        <LinearLayout
            android:id="@+id/headerBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_banner_blue"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Consultation"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Understanding your unique business needs"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/btnPrimaryCta"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Understanding Your Business Needs"
                android:textAllCaps="false"
                android:textColor="@color/textLight"
                android:background="@drawable/btn_primary"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- Body content on white background -->
        <LinearLayout
            android:id="@+id/contentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="14dp"
            app:layout_constraintTop_toBottomOf="@id/headerBlock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our client consultation process is designed to thoroughly understand your business objectives, challenges, and technology requirements."
                android:textColor="@color/textDark"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n• In-depth interviews with key stakeholders\n• Analysis of current business processes\n• Identification of pain points and opportunities\n• Understanding your short-term and long-term goals\n• Documentation of specific requirements\n"
                android:textColor="@color/textDark"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We take the time to listen and learn about your business before making any recommendations."
                android:textColor="@color/textDark"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Extend blue to bottom to mimic mock -->
        <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_blue_gradient"
            app:layout_constraintTop_toBottomOf="@id/contentCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
